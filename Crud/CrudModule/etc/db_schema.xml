<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="events_visiting">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="nick" nullable="false" length="255" comment="Nick"/>
        <column xsi:type="varchar" name="visiting" nullable="false" length="255" comment="Visiting"/>
        <column xsi:type="varchar" name="boxes" nullable="false" length="255" comment="Boxes"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
